<?xml version="1.0" encoding="utf-8"?>
<com.google.android.exoplayer.AspectRatioFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_frame"
    android:layout_width="100dp"
    android:layout_height="100dp">

    <ImageView
            android:id="@+id/yt_preview_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:visibility="gone"/>

    <com.android.CustomisedVideoPlayer.view.TriangularSurfaceView
        android:id="@+id/texture_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center" />

    <View
        android:id="@+id/translucent_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#00000000"
        android:visibility="visible"
        android:layout_gravity="center" />


</com.google.android.exoplayer.AspectRatioFrameLayout>